<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveInformationActivity">

    <ImageView
        android:id="@+id/topLogo"
        android:layout_width="278dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/top_logo"
        android:src="@drawable/top_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/saveinformation_sub_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 속 식물의 정보를 아신다면 정보를 기입해주세요!"
        android:textColor="@color/black"
        android:background="#D3ED9D"
        android:padding="8dp"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLogo"/>

    <LinearLayout
        android:id="@+id/saveinformation_list_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/saveinformation_sub_TextView"
        app:layout_constraintEnd_toEndOf="@id/saveinformation_sub_TextView"
        app:layout_constraintTop_toBottomOf="@id/saveinformation_sub_TextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/saveinformation_list_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/saveinformation_image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/test_image"
                android:padding="10dp"
                android:background="@drawable/saveinformation_list_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="이름 : "
                android:textColor="@color/black"
                android:padding="15dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/saveinformation_scientific_name_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:hint="식물 이름"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"
            android:background="@drawable/saveinformation_list_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="식물 과명 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_family_name_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="식물 과명"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="물 주기 기간 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_water_cycle_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="물주기 기간"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="햇빛의 양 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="성장 높이 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_height_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="성장 높이"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="적정 배치 장소 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_place_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="적정 배치 장소"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="식물 냄새 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_smell_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="색물 냄새"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="생장 속도 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_growth_speed_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="생장 속도"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="적정 온도 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_proper_temperature_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="적정 온도"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/saveinformation_bottom_stroke"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="유해충 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_pest_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="유해충"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="관리 요구도 : "
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/saveinformation_manage_level_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="관리 요구도"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saveinformation_list_Layout"
        android:text="저장"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>